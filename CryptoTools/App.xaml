<Application x:Class="CryptoTools.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CryptoTools.Converters"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <converters:IntToBoolValueConverter x:Key="IntToBoolValueConverter" />
        <Style x:Key="AdornerTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>
    </Application.Resources>
</Application>