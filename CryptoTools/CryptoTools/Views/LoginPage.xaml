<Page x:Class="CryptoTools.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CryptoTools.Views"
      xmlns:vm="clr-namespace:CryptoTools.ViewModels"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Page.DataContext>
        <vm:LoginPageViewModel></vm:LoginPageViewModel>
    </Page.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Enter your username:" Margin="20 20 20 10" Height="25" />
            <TextBox x:Name="UserNameTextBox" GotFocus="UserNameTextBox_OnGotFocus" Text="{Binding UserName}"
                     LostFocus="UserNameTextBox_OnLostFocus" Margin="20 0 20 10" Height="25" />
            <Label Content="Enter your password:" Margin="20 0 20 10" Height="25" />
            <PasswordBox x:Name="PasswordBox" GotFocus="PasswordBox_OnGotFocus" LostFocus="PasswordBox_OnLostFocus"
                         Margin="20 0 20 10" Height="25" />
            <Button x:Name="LoginButton" Content="Login" Width="100" Margin="0 20 0 0 " Height="30"
                    Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Page>